{% extends 'base.html.twig' %}

{% block title %}Nouveau Smartphone{% endblock %}

{% block body %}
    <div style="width: 82vw; min-height: 80vh">

        {% for message in app.flashes('warning') %}
            <div class="alert alert-warning">
                {{ message }}
            </div>
        {% endfor %}
        <div class="d-flex justify-content-center mt-5">
            <div class="d-flex flex-column justify-content-center align-items-center p-5 mt-5 ce-form-smartphone">
                <h1>Ajouter un smartphone</h1>

                {{ include('smartphone/_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
