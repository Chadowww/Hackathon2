{% extends 'base.html.twig' %}

{% block title %}Smartphone{% endblock %}

{% block body %}

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    <section class="ce-main-container-show p-3 w-100">
        <div class="d-flex justify-content-center">
            <h1 class="mb-3 mt-3">{{ details.data.items[0].product.model }}</h1>
        </div>
        <div class="d-flex em-media-screen">
            <div class="d-flex align-items-start">
                <img class="ec-img-phone" src="{{ details.data.items[0].image.front }}" alt="">
            </div>

            <div class="d-flex flex-column justify-content-center ">
                <div class="d-flex"><h5>Modèle :</h5>
                    <p class="ms-3">{{ smartphone.model }}</p>
                </div>

                <div class="d-flex">
                    <h5>Système d'exploitation : </h5>
                    <p class="ms-3">{{ details.data.items[0].key_aspects.os }}</p>
                </div>

                <div class="d-flex">
                    <h5>Mémoire RAM : </h5>
                    <p class="ms-3">{{ smartphone.memory }}</p>
                </div>

                <div class="d-flex">
                    <h5>Capacité de stockage : </h5>
                    <p class="ms-3">{{ smartphone.storage.goStorage }}</p>
                </div>

                <div class="d-flex">
                    <h5>Date de fabrication : </h5>
                    <p class="ms-3">{{ smartphone.releaseDate|date('d/m/Y') }}</p>
                </div>

                <div class="d-flex">
                    <h5>Condition : </h5>
                    <p class="ms-3">{{ smartphone.phoneCondition.overallCondition }}</p>
                </div>

                <div class="d-flex">
                    <h5>Catégorie</h5>
                    <p class="ms-3">{{ smartphone.category.categoryCode }}</p>
                </div>

                <div class="d-flex">
                    <h5>Prix</h5>
                    <p class="ms-3">{{ smartphone.category.price }} Euros</p>
                </div>

            </div>
        </div>

        <div class="d-flex justify-content-between w-100">
            <a href="{{ path('app_smartphone_index') }}" class="w-25 mt-4 mb-2">
                <button class="ec-btn2 mt-3">{{ button_label|default('Retour à la liste') }}</button>
            </a>
            <a href="{{ path('app_smartphone_new') }}" class="w-25 mt-4 mb-2">
                <button class="ec-btn mt-3">{{ button_label|default('Ajouter un smartphone') }}</button>
            </a>
        </div>
    </section>


{% endblock %}

