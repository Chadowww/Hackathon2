{{ form_start(form) }}
<div class="mb-3">
{{ form_row(form.model,{'label_attr': {'class':'sr-only'},
    'attr':{'class':'ema-input-main p-2 my-4 mb-3','placeholder' : 'Modèle du smartphone'}}) }}
</div>

<div class="d-flex mb-4 align-items-center">
    <h6 class="mb-0">
        Chargeur fourni ?
    </h6>
    <div class="ms-3">
        {{ form_row(form.hasCharger, {'label_attr' : {'class':'sr-only'}}) }}
    </div>
</div>

<div class="d-flex mb-4 align-items-center">
    <h6 class="mb-0">
        Capacité de stockage (en giga octets) ?
    </h6>
    <div class="ms-3">
        {{ form_row(form.storage, {'label_attr' : {'class':'sr-only'}, 'attr': {'class': 'ec-rounded-dropdown'}}) }}
    </div>
</div>

<div class="d-flex align-items-center">
    <h6 class="mb-0">
        Etat général du téléphone ?
    </h6>
    <div class="ms-3">
        {{ form_row(form.phoneCondition, {'label_attr' : {'class':'sr-only'}, 'attr': {'class': 'ec-rounded-dropdown'}}) }}
    </div>
</div>


<button class="ec-btn mt-5">{{ button_label|default('Ajouter') }}</button>
{{ form_end(form) }}